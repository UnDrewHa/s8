.section--product
	background #353b40
	padding-bottom 100px
	display table

	&:after
		content ''
		left 0
		top 50px
		position absolute
		display block
		width 100%
		height 1px
		background-color #e1e1e1
		opacity .1
		z-index 0
	&:before
		content ''
		bottom -10px
		left 50%
		position absolute
		transform translateX(-50%)
		display block
		width 690px
		height 386px
		border 1px solid rgba(#e7e7e7, .20)
		border-radius unit(@width/2 + 1, 'px') unit(@width/2 + 1, 'px') 0 0
		z-index 0

	.container
		position relative
		z-index 1

.product
	position relative
	width 100%
	&:after
		content ''
		width 1px
		height 100%
		background-color #e1e1e1
		opacity .1
		position absolute
		left 50%
		top 0
		transform translateX(-50%)
		z-index 0
		margin-top 100px
	
	&-image
		width 390px
		margin -106px auto 20px
		position relative
		z-index 2
		img
			width 100%
			vertical-align top
	
	&-logo
		margin 0 auto 28px
		width 620px
		display block
	
	&-article
		width 760px
		margin 0 auto 38px
		text-align center
		&__title
			color #797e82
			text-transform uppercase
			font-family 'Gotham'
			font-size 29px
			letter-spacing 2px
			margin-bottom 35px
		&__text
			color #c0c0c0
			font-size 18px
			line-height 30px
			font-family 'S6'
	
	&-btn
		width 212px
		height 64px
		margin 0 auto
		border 1px solid #c0c0c0
		color #c0c0c0
		text-align center
		line-height 64px
		font-size 18px
		margin 0 auto
		display block
		text-decoration none
		&:hover
			opacity .1