.bg-placeholder
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  height 100%
  overflow-x hidden
  transition opacity 1.2s ease
  pointer-events none
  width 100%
  z-index 1000
  &._loaded
    opacity 0
  *
    pointer-events none
  svg
    height: 100%;
    width: 2600px;
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    display: block;

.loader,
.loader:before,
.loader:after {
  border-radius: 50%;
  width: 2.5em;
  height: 2.5em;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  -webkit-animation: load7 1.8s infinite ease-in-out;
  animation: load7 1.8s infinite ease-in-out;
}
.loader {
  position absolute
  top 50%
  left 50%
  color: rgba(#f4f4f4,.15);
  font-size: 8px;
  position: relative;
  text-indent: -9999em;
  transform: translate(-50%,-50%,0);
  animation-delay: -0.16s;
  z-index 1
}
.loader:before,
.loader:after {
  content: '';
  position: absolute;
  top: 0;
}
.loader:before {
  left: -3.5em;
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}
.loader:after {
  left: 3.5em;
}



