.phone
  position fixed
  bottom 5vh
  left 50%
  background url('../i/phone.png') 50% no-repeat
  background-size contain
  content ''
  cursor pointer
  width: 96px;
  height: 200px;
  margin 0 0 0 -48px
  opacity 0
  pointer-events none
  z-index 10
  touch-action: none;
  &._animation-start
    animation-name: phonePulse;
    transition: transform .5s cubic-bezier(.42, 0, .58, 1);
    animation-duration: 1.1s;
    animation-iteration-count: infinite;
    pointer-events auto
  &._animation-stop
    animation none
    transition none
  
._loaded
  .bg-placeholder
    opacity 0

._animation
  opacity 0

@keyframes phonePulse {
  0% {
    -webkit-transform: scale(1.0);
            transform: scale(1.0);
  }
  50% {
    -webkit-transform: scale(1.05);
            transform: scale(1.05);
  }
  100% {
    -webkit-transform: scale(1.0);
            transform: scale(1.0);
  }
}

@keyframes slideBtn {
  0% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
  }
  50% {
    -webkit-transform: translateY(-10px);
            transform: translateY(-10px);
  }
  100% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
  }
}


@keyframes load7 {
  0%,
  80%,
  100% {
    box-shadow: 0 2.5em 0 -1.3em;
  }
  40% {
    box-shadow: 0 2.5em 0 0;
  }
}