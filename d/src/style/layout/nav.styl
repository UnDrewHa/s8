.section--nav-footer
.section--nav
  height 50px
  background-color #303030
  .container
    height 100%

.nav
  display flex
  flex-direction row
  align-items stretch
  justify-content center
  position relative
  width 100%
  height 100%

  &-link
    text-transform uppercase
    text-decoration none
    font-family 'S6'
    letter-spacing 1px
    display flex
    text-decoration none
    align-items center
    .nav--top &
    .nav--footer &
      position relative
      color #fff
      padding 0 36px
      border-right 1px solid rgba(#b8b3b3, .3)
      transition opacity .3s ease
      &:last-child
        border-right none
      &:hover
        opacity .1
    .nav--footer &
      border none